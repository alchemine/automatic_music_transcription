{
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": { "PYTHONPATH": "${workspaceFolder}" }
    },
    {
      "name": "streamlit debug",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "args": ["run", "${file}"],
      "justMyCode": true,
      "env": { "PYTHONPATH": "${workspaceFolder}" }
    }
  ]
}
